<!DOCTYPE html>
<html>
<head>
  <title>Battleship</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="content">
<% flash.each do |flash_type, message| %>
  <%= message %>
<% end %>
<hr>
  <div class="wrapper">
    <div class="content">
      <div class="container">
        <%= yield %>
        <hr>
        <%= @game.current_player %>
        <%= session[:player] %>
        <%= @params.inspect %>
      </div>
    </div>
  </div>
</body>
</html>
